mixin article-preview(preview)
  .article-preview(href=preview.link)
    .article-preview__pic
      +picture(preview.path, preview.name, preview.format, preview.width, preview.height, preview.alt)
    a.article-preview__text(href=preview.link)
      .property.property--little!= preview.property
      .article-preview__title!= preview.title
