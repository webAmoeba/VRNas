mixin logo(index=false)
  if index
    span.logo.logo--is-active
      +picture(
        "logo",
        "logo",
        "png",
        "101",
        "30",
        "Логотип.",
      )
  else
    a.logo(href="index.html")
      span.visually-hidden to main page
      +picture(
        "logo",
        "logo",
        "png",
        "101",
        "30",
        "Логотип.",
      )
