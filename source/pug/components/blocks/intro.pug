mixin intro()
  -
    const btn = {
      text: "discover more",
      href: "#",
      isExternal: true,
    }
  section.intro
    h1.visually-hidden vrnas
    //- вставлять блоки во внешний контейнер неверно
    //- все блоки содержат в себе container без доп класса tutorial__wrapper
    .container
      .intro__grid
        .intro__text-part
          h1.title.title--h1 Immerse Yourself in Virtual Reality
          p Experience Unforgettable Events in VR. Bring your events to life like never before with our VR services
          +btn(btn).intro__btn
          .intro__clients
            .intro__photos
              +picture(
                "content/happy-client",
                "1",
                "jpg",
                "50",
                "50",
                "Фото счастливого клиента."
              )
              +picture(
                "content/happy-client",
                "2",
                "jpg",
                "50",
                "50",
                "Фото счастливого клиента."
              )
              +picture(
                "content/happy-client",
                "3",
                "jpg",
                "50",
                "50",
                "Фото счастливого клиента."
              )
            .intro__photos-description
              .intro__how-many 32k+
              .intro__who-how-many Happy Client
        .intro__picture-part
          .intro__picture-wrapper
            +picture(
              "content",
              "intro",
              "png",
              "526",
              "626",
              "Чувак с надетыми черными виар-очками.",
            )
    +personalisation()
