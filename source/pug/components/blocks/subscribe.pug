mixin subscribe()
  section.subscribe
    .container
      .subscribe__grid
        label.subscribe__label(for="input-email") Subscribe to&nbsp;our newsletter for latest updates
        .subscribe__input-wrapper
          +icon("letter", "24", "24").subscribe__icon
          input(type="email" id="input-email" placeholder="Enter your email address")
          button.subscribe__submit(type="submit")
            span.visually-hidden send your email
            +icon("plane", "16", "16")
